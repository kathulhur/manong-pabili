model User {
  id                  Int       @id @default(autoincrement())
  email               String?   @unique
  username            String    @unique
  name                String?
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  products            Product[]
}

model Product {
  id           Int     @id @default(autoincrement())
  name         String
  availability Boolean
  user         User    @relation(fields: [userId], references: [id])
  userId       Int
}
